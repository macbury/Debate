<h1>New debate</h1>

<% semantic_form_for(@debate) do |f| %>
	<% f.inputs do %>
		<%= f.input :title %>
		<%= f.input :description %>
		<%= f.input :email %>
		<%= f.input :question %>
		<%= f.input :challenger_option %>
		<%= f.input :defender_option %>
	<% end %>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', debates_path %>